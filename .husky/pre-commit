#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

npm run format:check || (
    echo '游뱂游댌游뱂 You have some formatting errors... 游뱂游댌游뱂
            Next format check failed: View the errors above to see why.'
    false;
)

npm run type-check || (
    echo '游뱂游댌游뱂 You have some type errors... 游뱂游댌游뱂
            Next type-check failed: View the errors above to see why.'
    false;
)

npm run lint || (
        echo '游땫游游녦游땫 Get that weak s**t out of here! 游땫游游녦游땫 
                ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.'
        false; 
)

# If everything passes... Now we can commit
echo '九九九九 You win this time... I am committing this now. 九九九九'
